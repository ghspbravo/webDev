@model FormTask.Models.MessageModel

@{
    ViewBag.Title = "Feedback";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="jumbotron">
        <div class="container">
            <h1>Take a minute...</h1>
            <p>...and leave your feedback</p>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form id="feedback" action="/Contact/Send" method="POST">
                <div class="form">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label" for="AddressInput">Email</label>
                        <input asp-for="Address" id="AddressInput" type="email" class="form-control" placeholder="Email here...">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Topic" class="control-label" for="TopicInput">Тема</label>
                        <input asp-for="Topic" id="TopicInput" type="text" class="form-control" placeholder="What's your message about?">
                        <span asp-validation-for="Topic" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Text" id="TextInput" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default pull-right">Go !</button>
                </div>
            </form>
            @if (ViewBag.ErrorMessage != null)
            {
                <h1>Что-то пошло не так:</h1>
                <div class="alert-info">
                    <p>@Html.Raw(ViewBag.ErrorMessage)</p>
                </div>
            }
            @if (ViewBag.Success != null && ViewBag.Success)
            {
                <h1>Мои поздравления!</h1>
                <div class="alert-success">
                    <p class="text-success">Сообщение успешно доставлено!</p>
                </div>
            }
            <span class="clearfix"></span>
        </div>
        <div class="col-md-5 col-md-offset-1 clearfix">
            <h2>Small tip on how to write Email:</h2>
            <p><span class="lead">Your e-mail is a reflection of you.</span> Every e-mail you send adds to, or detracts from your reputation. If your e-mail is scattered, disorganized, and filled with mistakes, the recipient will be inclined to think of you as a scattered, careless, and disorganized businessperson. Other people's opinions matter and in the professional world, their perception of you will be critical to your success.</p>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>